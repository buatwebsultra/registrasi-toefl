                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        const formatSelect = document.getElementById('test_format');
                        const pbtSection = document.getElementById('pbt-section');
                        const testScoreInput = document.getElementById('test_score');
                        const testScoreLabel = document.querySelector('label[for="test_score"]');
                        const standardsTable = document.querySelector('.table-responsive table');
                        const academicLevelSelect = document.getElementById('academic_level');
                        const calculatedPassedDiv = document.getElementById('calculated-passed');

                        // Function to calculate PBT score
                        function calculatePBTScore() {
                            if (formatSelect.value === 'PBT') {
                                const listeningInput = document.querySelector('input[name="listening_score_pbt"]');
                                const structureInput = document.querySelector('input[name="structure_score_pbt"]');
                                const readingInput = document.querySelector('input[name="reading_score_pbt"]');

                                const listening = parseFloat(listeningInput.value) || 0;
                                const structure = parseFloat(structureInput.value) || 0;
                                const reading = parseFloat(readingInput.value) || 0;

                                if (listening || structure || reading) { // Allow partial scores during input
                                    const calculatedTotal = Math.round(((listening + structure + reading) / 3) * 10);
                                    testScoreInput.value = calculatedTotal;

                                    // Update pass status based on academic level from the participant's study program
                                    const academicLevel = '{{ $participant->studyProgram->level ?? $participant->academic_level ?? "" }}';
                                    updatePassStatus(calculatedTotal, academicLevel, true);
                                }
                            }
                        }

                        // Function to update pass status based on score and academic level (PBT only)
                        function updatePassStatus(score, academicLevel, isPBT) {
                            if (!academicLevel) return;

                            let isPassed = false;

                            // Only PBT logic now (iBT logic removed)
                            switch(academicLevel.toLowerCase()) {
                                case 'undergraduate':
                                case 'bachelor':
                                case 'sarjana':
                                case 's1':
                                    isPassed = score >= 400; // S1: score must be ≥ 400
                                    break;
                                case 'master':
                                case 'magister':
                                case 's2':
                                    isPassed = score >= 450; // S2: score must be ≥ 450
                                    break;
                                case 'doctorate':
                                case 'doctoral':
                                case 'doktor':
                                case 's3':
                                    isPassed = score >= 500; // S3: score must be ≥ 500
                                    break;
                                default:
                                    isPassed = false;
                            }

                            console.log('Debug - Academic Level:', academicLevel, 'Score:', score, 'isPBT (ignored):', isPBT, 'isPassed:', isPassed);

                            // Update the calculated passed div content
                            const statusText = isPassed ? 'LULUS' : 'TIDAK LULUS';
                            const statusClass = isPassed ? 'success' : 'danger';
                            const icon = isPassed ? 'check-circle' : 'times-circle';

                            // Update the status text, level and score
                            document.getElementById('statusText').textContent = statusText;
                            document.getElementById('academicLevelText').textContent = academicLevel ? academicLevel.charAt(0).toUpperCase() + academicLevel.slice(1) : 'belum ditentukan';
                            document.getElementById('scoreText').textContent = score;

                            // Update the alert class
                            const statusDisplay = document.getElementById('statusDisplay');
                            statusDisplay.className = `alert alert-\${statusClass} rounded-3`;

                            // Update the icon
                            const iconElement = statusDisplay.querySelector('i');
                            iconElement.className = `fas fa-\${icon} me-2`;
                        }

                        // Format change handler - only PBT now, so only handle PBT
                        formatSelect.addEventListener('change', function() {
                            // Only PBT is supported now, so always use PBT settings
                            testScoreInput.max = 677; // Max possible with formula: ((68+68+67)÷3)×10 = 679.99... rounded to 677
                            testScoreInput.readOnly = true;
                            testScoreInput.value = '';
                            testScoreLabel.innerHTML = 'Nilai Total TOEFL';
                            document.querySelector('.form-text').innerHTML = 'Skala TOEFL PBT: 0-677 poin (diisi otomatis berdasarkan rumus: ((L+S+R)÷3)×10)';

                            // Update standards table for PBT
                            standardsTable.innerHTML = `
                                <thead class="table-light">
                                    <tr>
                                        <th>Jenjang</th>
                                        <th>Skor Minimum Lulus</th>
                                        <th>Keterangan</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>S1 (Sarjana)</td>
                                        <td>&ge; 400</td>
                                        <td>Skor harus 400 atau lebih untuk lulus</td>
                                    </tr>
                                    <tr>
                                        <td>S2 (Magister)</td>
                                        <td>&ge; 450</td>
                                        <td>Skor harus 450 atau lebih untuk lulus</td>
                                    </tr>
                                    <tr>
                                        <td>S3 (Doktor)</td>
                                        <td>&ge; 500</td>
                                        <td>Skor harus 500 atau lebih untuk lulus</td>
                                    </tr>
                                </tbody>
                            `;

                            // Update pass status if academic level is available and test score exists
                            const academicLevel = '{{ $participant->studyProgram->level ?? $participant->academic_level ?? "" }}';
                            const currentScore = parseFloat(testScoreInput.value);
                            if (academicLevel && !isNaN(currentScore)) {
                                // Always use PBT logic since only PBT is supported
                                updatePassStatus(currentScore, academicLevel, true);
                            }
                        });


                        // Add event listeners to PBT score inputs
